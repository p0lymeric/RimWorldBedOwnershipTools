<?xml version="1.0" encoding="utf-8"?>
<ModMetaData>
    <packageId>polymeric.bedownershiptools</packageId>
    <name>Bed Ownership Tools</name>
    <author>polymeric</author>
    <description>Tools to reduce bed-related micromanagement.

- Designate beds for communal use.
- Pin bed owner assignments so they aren't forgotten.
- Assign multiple beds per colonist.
- Build multiple deathrest chambers per deathrester (Biotech only).
- Appoint automatic deathrest schedules (Biotech only).</description>
    <url>https://github.com/p0lymeric/RimWorldBedOwnershipTools</url>

    <modVersion IgnoreIfNoMatchingField="True">1.1.4</modVersion>

    <supportedVersions>
        <li>1.5</li>
        <li>1.6</li>
    </supportedVersions>

    <modDependencies>
        <li>
            <packageId>brrainz.harmony</packageId>
            <displayName>Harmony</displayName>
            <steamWorkshopUrl>steam://url/CommunityFilePage/2009463077</steamWorkshopUrl>
            <downloadUrl>https://github.com/pardeike/HarmonyRimWorld/releases/latest</downloadUrl>
        </li>
    </modDependencies>

    <loadAfter>
        <li>orion.hospitality</li>
        <li>maeyanie.onebedtosleepwithall</li>
        <li>zed.0xff.loftbed</li>
        <li>nekoemi.loftbed</li>
        <li>darknote.bunkbeds</li>
        <li>telardo.multifloors</li>
        <li>vanillaracesexpanded.android</li>
    </loadAfter>
</ModMetaData>
